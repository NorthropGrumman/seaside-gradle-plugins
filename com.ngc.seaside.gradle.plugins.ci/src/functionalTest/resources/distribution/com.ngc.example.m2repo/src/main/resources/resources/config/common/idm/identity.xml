<idm:identityManagement xmlns:idm="http://blocs.ngc.com/xsd/idm/auth/v1">
    <idm:groups>
        <idm:group id="public"/>

        <idm:group id="authenticated">
            <idm:parents>
                <idm:group id="public"/>
            </idm:parents>
        </idm:group>

        <idm:group id="parentGroup1">
            <idm:parents>
                <idm:group id="authenticated"/>
            </idm:parents>
        </idm:group>

        <idm:group id="parentGroup2"/>

        <idm:group id="group1">
            <idm:parents>
                <idm:group id="parentGroup1"/>
            </idm:parents>
        </idm:group>

        <idm:group id="group2">
            <idm:attributes>
                <idm:attribute name="attribute1" value="value1"/>
            </idm:attributes>
            <idm:parents>
                <idm:group id="parentGroup1"/>
                <idm:group id="parentGroup2"/>
            </idm:parents>
        </idm:group>
    </idm:groups>

    <idm:users>
        <idm:user id="admin"
                  name="Admin"
                  password="password">
            <idm:groups>
                <idm:group id="authenticated"/>
            </idm:groups>
        </idm:user>

        <idm:user id="bsmith"
                  name="Bob Smith"
                  password="password1">
            <idm:groups>
                <idm:group id="group2"/>
            </idm:groups>
        </idm:user>

        <idm:user id="asmith"
                  name="Adam Smith"
                  password="password2">
            <idm:attributes>
                <idm:attribute name="attribute1" value="value1"/>
            </idm:attributes>
            <idm:groups>
                <idm:group id="authenticated"/>
                <idm:group id="group1"/>
            </idm:groups>
        </idm:user>
    </idm:users>
</idm:identityManagement>